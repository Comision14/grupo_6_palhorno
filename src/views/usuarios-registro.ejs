<%- include('partials/head', {title: 'Formulario de creación'}) %>
<body>
	<div id="contenedor">
		<%- include('./partials/header') %>
		<main class="body__main">
			<h1>Registro</h1>
			<form action="/usuarios/registro" method="POST" class="formularios">
				<img class="img" src="/stock-photos/mini-torta-red-velvet-2.jpg" alt="">
				<div class="control-formularios">
					<input type="text" class="controls <%= locals.errors && errors.name ? 'is-invalid' : null %>" value="<%= locals.old && old.name ? old.name : null %>" name="nombre" placeholder="Nombre" minlength="3"  >
					<small id="errorNombre" class="text-danger"> <%= locals.errors && errors.name ? errors.name.msg : null %> </small>
				</div>
				<div class="control-formularios">
					<input type="text" name="apellido" placeholder="Apellido" minlength="3" class="controls" >
				</div>
				<div class="control-formularios">
					<input type="text" name="phone" placeholder="Número de teléfono" class="controls" >
				</div>
				<div class="control-formularios">
					<input type="email" name="email" placeholder="E-mail" class="controls" >
				</div>
				<div class="control-formularios">
					<input type="password" name="contrasena" placeholder="Contraseña" class="controls" >
				</div>
				<button type="submit" class="boton-formularios">Registro</button>
				<div class="registros">
					<p>Ya miembro?</p><a href="/usuarios/login" title="ingresa con tu usuario">Login</a>
				</div>   
			</form>
		</main>
		<%- include('./partials/footer') %>
	</div>
</body>
</html>